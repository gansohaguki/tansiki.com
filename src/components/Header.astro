---
import HamburgerMenu from "./HamburgerMenu.astro";
---

<header>
    <a href="/">
        <h1>TANSIKI OFFICIAL</h1>
    </a>
    <HamburgerMenu />
</header>

<style lang="scss">
    @import url("https://fonts.googleapis.com/css2?family=Oswald&display=swap");

    header {
        img {
            position: absolute;
            top: 0;
            left: 0;
            margin-left: auto;
            margin-right: auto;
            width: 60px;
            height: 60px;
        }

        a {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 16rem;
            color: black;
            text-decoration: none;

            h1 {
                font-family: "Oswald", sans-serif;
                text-align: center;
                font-size: 2rem;
            }
        }
    }
</style>
